#!/bin/bash
set -eux

# Preserve source code tree
cp -r cvmfs ${BOSH_INSTALL_TARGET}/src

# Compile
cd cvmfs
cmake \
  -DCMAKE_INCLUDE_PATH=$(readlink -nf /var/vcap/packages/attr/include) \
  -DCMAKE_LIBRARY_PATH=$(readlink -nf /var/vcap/packages/attr/lib) \
  -DCMAKE_PREFIX_PATH=${BOSH_INSTALL_TARGET} \
  .
make
